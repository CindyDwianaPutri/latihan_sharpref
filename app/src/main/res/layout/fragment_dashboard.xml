<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textSize="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/aa1"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#FFDAB9">

        <RelativeLayout
            android:layout_width="330sp"
            android:layout_height="40sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/selector3" />

        <ImageView
            android:id="@+id/aa"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18sp"
            android:background="@drawable/lingkaran"
            android:src="@drawable/luffy" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:layout_marginLeft="9sp"
            android:layout_marginTop="15sp"
            android:src="@drawable/baseline_search_24"
            />


        <TextView
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:text="Ingin Mencari Apa?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="" />
    </RelativeLayout>

    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aa1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:background="#fff"
            >


            <RelativeLayout
                android:id="@+id/kel2"
                android:layout_width="379dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector1">

                <RelativeLayout
                    android:id="@+id/ly2"
                    android:layout_width="130dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector3">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="50dp"
                        android:layout_height="40dp"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:src="@drawable/gopay" />

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/logo"
                        android:text="Rp. 500.000"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/ly3"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ly2">

                    <ImageView
                        android:id="@+id/satu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/pluss_foreground" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/satu"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:text="Isi Saldo"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly4"
                    android:layout_width="75dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ly3">

                    <ImageView
                        android:id="@+id/tiga"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/bayar_foreground" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tiga"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="1dp"
                        android:text="Bayar"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ly5"
                    android:layout_width="75dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ly4">

                    <ImageView
                        android:id="@+id/dua"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/e_foreground" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dua"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:text="Eksplor"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kel2"
                android:layout_marginBottom="10sp"
                android:background="#ffff">

                <ImageView
                    android:id="@+id/lima"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15sp"
                    android:src="@drawable/goride" />


                <ImageView
                    android:id="@+id/enam"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15sp"
                    android:layout_toRightOf="@id/lima"
                    android:src="@drawable/gocar" />


                <ImageView
                    android:id="@+id/tujuh"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15sp"
                    android:layout_toRightOf="@id/enam"
                    android:src="@drawable/gofood" />


                <ImageView
                    android:id="@+id/delapan"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_below="@+id/lima"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="25sp"
                    android:src="@drawable/omart" />

                <ImageView
                    android:id="@+id/sembilan"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_below="@id/enam"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25sp"
                    android:layout_toRightOf="@id/delapan"
                    android:src="@drawable/tagihan" />

                <ImageView
                    android:id="@+id/sempuluh"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_below="@id/tujuh"
                    android:layout_marginLeft="137dp"
                    android:layout_marginTop="-73dp"
                    android:layout_toRightOf="@id/sembilan"

                    android:src="@drawable/gosend" />


                <ImageView
                    android:id="@+id/sebelas"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_below="@id/delapan"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="-71dp"
                    android:layout_toRightOf="@id/sembilan"
                    android:src="@drawable/gotransit" />

                <ImageView
                    android:id="@+id/duabelas"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_below="@id/sembilan"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-73dp"
                    android:layout_toRightOf="@id/sebelas"

                    android:src="@drawable/lain" />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kel6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kel5"
                android:background="#ffff"
                android:layout_marginBottom="10sp"
                >

                <ImageView
                    android:id="@+id/sc12"
                    android:layout_width="1700sp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/bc" />

            </RelativeLayout>

            <TextView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/kel6"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:text="Cek yang menarik diGoFood"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kel6"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp">


                <LinearLayout
                    android:id="@+id/lyuscrol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sc1"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/p4" />

                    <ImageView
                        android:id="@+id/sc2"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/p3" />

                    <ImageView
                        android:id="@+id/sc3"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/p2" />

                    <ImageView
                        android:id="@+id/sc4"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/p5" />
                </LinearLayout>
            </HorizontalScrollView>




        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
